{
  "name": "@portabletext/toolkit",
  "version": "2.0.2",
  "description": "Toolkit of handy utility functions for dealing with Portable Text",
  "keywords": [
    "sanity",
    "cms",
    "headless",
    "realtime",
    "content",
    "portable-text-toolkit"
  ],
  "homepage": "https://github.com/portabletext/toolkit#readme",
  "bugs": {
    "url": "https://github.com/portabletext/toolkit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/portabletext/toolkit.git"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/portable-text-toolkit.d.ts",
      "source": "./src/index.ts",
      "require": "./dist/portable-text-toolkit.js",
      "import": "./dist/portable-text-toolkit.esm.js",
      "default": "./dist/portable-text-toolkit.esm.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/portable-text-toolkit.js",
  "module": "./dist/portable-text-toolkit.esm.js",
  "source": "./src/index.ts",
  "types": "./dist/portable-text-toolkit.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "run-s clean pkg:build pkg:check",
    "clean": "rimraf dist coverage",
    "coverage": "vitest run --coverage",
    "docs:build": "typedoc",
    "format": "prettier --write --cache --ignore-unknown .",
    "lint": "eslint .",
    "pkg:build": "pkg-utils build --strict",
    "pkg:check": "pkg-utils --strict",
    "prepare": "husky install",
    "prepublishOnly": "run-s build lint type-check",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaFeatures": {
        "modules": true
      },
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "extends": [
      "sanity",
      "sanity/typescript",
      "prettier"
    ],
    "ignorePatterns": [
      "dist/**/"
    ]
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "extends": "@sanity/semantic-release-preset"
  },
  "dependencies": {
    "@portabletext/types": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@sanity/pkg-utils": "^2.3.3",
    "@sanity/semantic-release-preset": "^4.0.0",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@vitest/coverage-c8": "^0.32.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-sanity": "^6.0.0",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-packagejson": "^2.4.2",
    "rimraf": "^4.1.2",
    "semantic-release": "^20.0.4",
    "typedoc": "^0.24.0",
    "typescript": "^4.9.4",
    "vitest": "^0.32.2",
    "vitest-github-actions-reporter": "^0.10.0"
  },
  "packageManager": "pnpm@8.6.3",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
